<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../layout/header.ejs") %>
  </head>
  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <!-- Preloader -->
      <%- include("../layout/preloader.ejs") %> <%-
      include("../layout/navbar.ejs") %> <%-include("../layout/sidebar.ejs") %>
      <div class="content-wrapper">
        <%- include("../layout/content-wrapper.ejs") %>
        <section class="content">
          <div class="container-fluid">
            <h2 class="text-center display-4">Search</h2>
            <div class="row">
              <div class="col-md-8 offset-md-2">
                <div class="col-3">
                  <div class="form-group">
                    <label>Search By: </label>
                    <select
                      class="select2"
                      id="formChoice"
                      style="width: 100%"
                      name="formChoice"
                      onchange=";"
                    >
                      <option value="" disabled selected style="display: none">
                        Select Search Options
                      </option>
                      <option value="/api/admin/searchByCrime/">
                        Crime Type
                      </option>
                      <option value="/api/admin/searchByName/">
                        User Name
                      </option>
                      <option value="/api/admin/searchByDate">Date</option>
                    </select>
                  </div>
                </div>
                <div class="form-group" id="box-1" style="display: none">
                  <form
                    action="/api/admin/searchByCrime/"
                    method="POST"
                    name="form1"
                  >
                    <div class="input-group">
                      <input
                        type="text"
                        name="name"
                        class="form-control"
                        placeholder="Type your keywords here"
                      />
                      <div class="input-group-append">
                        <button type="submit" class="btn btn-lg btn-default">
                          <i class="fa fa-search"></i>
                        </button>
                      </div>
                    </div>
                  </form>
                </div>
                <div class="form-group" id="box-2" style="display: none">
                  <form
                    action="/api/admin/searchByName/"
                    method="POST"
                    name="form1"
                  >
                    <div class="input-group">
                      <input
                        type="text"
                        name="name"
                        class="form-control"
                        placeholder="Type your keywords here"
                      />
                      <div class="input-group-append">
                        <button type="submit" class="btn btn-lg btn-default">
                          <i class="fa fa-search"></i>
                        </button>
                      </div>
                    </div>
                  </form>
                </div>
                <div class="form-group" id="box-3" style="display: none">
                  <form
                    action="/api/admin/searchByDate/"
                    method="POST"
                    name="form1"
                  >
                    <div class="input-group">
                      <input type="date" name="date" class="form-control" />
                      <div class="input-group-append">
                        <button type="submit" class="btn btn-lg btn-default">
                          <i class="fa fa-search"></i>
                        </button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
      <%- include("../layout/footer.ejs") %>
    </div>

    <%- include("../layout/js.ejs") %>
  </body>
</html>
