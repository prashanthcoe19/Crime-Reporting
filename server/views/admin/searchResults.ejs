<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../layout/header.ejs") %>
  </head>
  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <!-- Preloader -->
      <%- include("../layout/preloader.ejs") %> <%-
      include("../layout/navbar.ejs") %> <%-include("../layout/sidebar.ejs") %>
      <div class="content-wrapper">
        <%- include("../layout/content-wrapper.ejs") %>
        <section class="content">
          <div class="container-fluid">
            <h2 class="text-center display-4">Search</h2>
            <div class="row">
              <div class="col-md-8 offset-md-2">
                <form action="/api/admin/searchByName" type="POST">
                  <div class="input-group">
                    <input
                      type="text"
                      name="name"
                      class="form-control form-control-lg"
                      placeholder="Type your keywords here"
                    />
                    <div class="input-group-append">
                      <button type="submit" class="btn btn-lg btn-default">
                        <i class="fa fa-search"></i>
                      </button>
                    </div>
                  </div>
                </form>
              </div>
              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    <h3 class="card-title">All Reports</h3>

                    <div class="card-tools">
                      <a href="/api/admin/searchView">
                        <button type="submit" class="btn btn-default">
                          <i class="fas fa-search"> Search Report</i>
                        </button>
                      </a>
                    </div>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body table-responsive p-0">
                    <table class="table table-bordered table-hover">
                      <thead>
                        <tr>
                          <th>Date</th>
                          <th>Victim Name</th>
                          <th>CrimeType</th>
                          <th>Description</th>
                          <th>Status</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for(item of crime){%>
                        <tr>
                          <td>
                            <%= moment(item.createdAt).format("MMM Do YYYY") %>
                          </td>
                          <td><%= item.users.fullName %></td>
                          <td><%= item.crimeType %></td>
                          <td><%= item.description %></td>
                          <td><%= item.status %></td>
                          <td>
                            <button
                              class="btn btn-primary"
                              data-toggle="modal"
                              data-target="#modal-default-<%= item.id %>"
                            >
                              <i class="fas fa-edit"></i>
                            </button>
                            <button
                              class="btn btn-danger"
                              data-toggle="modal"
                              data-target="#modal-danger"
                            >
                              <i class="fas fa-trash"></i>
                            </button>
                          </td>
                        </tr>
                        <div
                          class="modal fade"
                          id="modal-default-<%= item.id %>"
                        >
                          <div class="modal-dialog">
                            <div class="modal-content bg-default">
                              <div class="modal-header">
                                <h4 class="modal-title">Edit Status</h4>
                                <button
                                  type="button"
                                  class="close"
                                  data-dismiss="modal"
                                  aria-label="Close"
                                >
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <div class="card-body">
                                <div class="form-group">
                                  <form
                                    action="/api/admin/<%= item.id %>"
                                    method="POST"
                                  >
                                    <label>Select</label>
                                    <select class="form-control" name="status">
                                      <option>Pending</option>
                                      <option>Completed</option>
                                      <option>In Progress</option>
                                      <option>Rejected</option>
                                    </select>
                                    <div class="card-footer">
                                      <button
                                        type="submit"
                                        class="btn btn-primary"
                                      >
                                        Submit
                                      </button>
                                    </div>
                                  </form>
                                </div>
                              </div>
                              <div class="modal-footer justify-content-between">
                                <button
                                  type="button"
                                  class="btn btn-outline-light"
                                  data-dismiss="modal"
                                >
                                  Close
                                </button>
                                <button
                                  type="button"
                                  class="btn btn-outline-light"
                                >
                                  Save changes
                                </button>
                              </div>
                            </div>
                          </div>
                        </div>
                        <%}%>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
      <%- include("../layout/footer.ejs") %>
    </div>
    <%- include("../layout/js.ejs") %>
  </body>
</html>
