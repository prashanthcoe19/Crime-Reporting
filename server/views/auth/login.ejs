<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-4 offset-md-4">
          <div class="login-form bg-light p-4">
            <form action="/api/admin/login" method="POST" class="row g-3">
              <h4>Login || Admin Panel</h4>
              <div class="col-12">
                <label>Email</label>
                <input
                  type="email"
                  name="email"
                  class="form-control"
                  placeholder="Email"
                />
              </div>
              <div class="col-12">
                <label>Password</label>
                <input
                  type="password"
                  name="password"
                  class="form-control"
                  placeholder="Password"
                />
              </div>
              <div class="col-12">
                <a href="/api/admin/forgetPassword" class="btn btn-link">
                  Forgot Password?
                </a>
              </div>
              <div class="col-12">
                <button type="submit" class="btn btn-primary float-end">
                  Login
                </button>
              </div>
            </form>
            <hr class="mt-4" />
            <div class="col-12">
              <p class="text-center mb-0">
                Have not account yet? <a href="/api/admin/register">Signup</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <%- include("../partials/jscript.ejs") %>
  </body>
</html>
